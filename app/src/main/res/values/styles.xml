<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- Base application theme -->
    <style name="Theme.CampusBuzz" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/status_bar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/deep_sky_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.CampusBuzz.Splash" parent="Theme.CampusBuzz">
        <!--item name="android:windowBackground">@drawable/splash_background</item-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="Theme.CampusBuzz.NoActionBar" parent="Theme.CampusBuzz">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/deep_sky_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text Styles -->
    <style name="AppTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ScreenTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="ButtonText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="FormLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CaptionText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Input Field Styles -->
    <style name="InputField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="boxBackgroundColor">@color/light_gray</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <!-- Card Styles -->
    <style name="NewsCard" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Dialog Styles -->
    <style name="AlertDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorSecondary">@color/deep_sky_blue</item>
    </style>
</resources>